<h1><%= @tournament.name %></h1>
<!-- <h3><%= @tournament.id %></h3> -->
<div class="container text-center">
    <div class="row">
      <div class="col-xs-12">
      Votre s√©lection de joueurs :
      <% if @selections.present? and @tournament.present? %>
        <% if @selections.first.id = @tournament.id %>
          <% @selections.first.players.each do |player| %>
          <h4><%= player.display_name %>  (<%= player.rank %>)</h4>
        <!--   Pour effacer je renvoie vers la methode delete du selection controler -->
          <i><%= link_to "DELETE PLAYER", selection_player_path(@selections.first.id, player), method: :delete %></i>
          <% end %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
<br>
<br>

Tableau :
<br>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
          <% @tournament.rounds.each do|round| %>
          <div class="row">
            <div class="col-sm-12">
            <strong><%= round.name %></strong>
            <br>
            <% round.matchs.each do |match| %>
              <br>
              <% match.firstentrys.each do |firstentry| %>
              (<%= firstentry.player.ranks.where(tournament_id: @tournament).first.current_rank %>)
              <%= link_to "#{firstentry.player.display_name}", tournament_round_match_firstentry_path(@tournament, round, match, firstentry)%></h4>
              <br>
              v
              <br>
              <% match.secondentrys.each do |secondentry| %>
              (<%= secondentry.player.ranks.where(tournament_id: @tournament).first.current_rank %>)
              <%= link_to "#{secondentry.player.display_name}", tournament_round_match_secondentry_path(@tournament, round, match, secondentry)%></h4>
              <br>
              <%= match.score.winning_entry_id %> wins in <%= match.score.number_of_sets %> sets
             <br>
             <br>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


